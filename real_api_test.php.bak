    private function runTest(string $methodName, callable $testFunction)
    {
        try {
            echo "  ðŸ§ª $methodName... ";
            $result = $testFunction();
            
            if (is_array($result) && isset($result['success']) && $result['success']) {
                echo "âœ… Muvaffaqiyatli\n";
                $this->testResults[$methodName] = ['status' => 'success', 'data' => $result];
                return $result;
            } elseif (is_array($result)) {
                echo "âŒ Xatolik: " . ($result['error'] ?? 'Unknown error') . "\n";
                $this->testResults[$methodName] = ['status' => 'error', 'error' => $result['error'] ?? 'Unknown error'];
            } else {
                echo "âœ… Tugallandi\n";
                $this->testResults[$methodName] = ['status' => 'completed', 'data' => $result];
                return $result;
            }
        } catch (Exception $e) {
            echo "âŒ Exception: " . $e->getMessage() . "\n";
            $this->testResults[$methodName] = ['status' => 'exception', 'error' => $e->getMessage()];
        }
        
        return null;
    }

    private function printSummary(): void
    {
        echo "ðŸ“‹ TEST NATIJALARI SUMMARY:\n";
        echo str_repeat("=", 50) . "\n";
        
        $successCount = 0;
        $errorCount = 0;
        $exceptionCount = 0;
        
        foreach ($this->testResults as $method => $result) {
            $status = $result['status'];
            $icon = match($status) {
                'success', 'completed' => 'âœ…',
                'error' => 'âš ï¸',
                'exception' => 'âŒ',
                default => 'â“'
            };
            
            echo "$icon $method: " . ucfirst($status);
            
            if (isset($result['error'])) {
                echo " - " . $result['error'];
            }
            
            echo "\n";
            
            match($status) {
                'success', 'completed' => $successCount++,
                'error' => $errorCount++,
                'exception' => $exceptionCount++,
                default => null
            };
        }
        
        echo str_repeat("=", 50) . "\n";
        echo "ðŸ“Š JAMI: " . count($this->testResults) . " test\n";
        echo "âœ… Muvaffaqiyatli: $successCount\n";
        echo "âš ï¸  Xatolik: $errorCount\n";
        echo "âŒ Exception: $exceptionCount\n";
        
        if ($successCount > 0) {
            echo "\nðŸŽ‰ Ba'zi testlar muvaffaqiyatli o'tdi!\n";
            echo "ðŸ“ Audio fayllar: {$this->outputDir}/\n";
        }
        
        if ($errorCount > 0 || $exceptionCount > 0) {
            echo "\nðŸ’¡ Maslahat: Ba'zi metodlar uchun to'lov rejasi yoki qo'shimcha sozlamalar kerak bo'lishi mumkin.\n";
        }
    }

